<!-- @format -->

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0" />
		<title>All Users</title>
		<style>
			table,
			td,
			tr,
			th {
				border: 1px solid black;
			}
		</style>
	</head>
	<body>
		<h2>Users Details</h2>

		<table>
			<tr>
				<th>ID:</th>
				<th>Username:</th>
				<th>Email:</th>
			</tr>
			<% for( user of data ) { %>
			<tr>
				<td><%= user.id %></td>
				<td><%= user.username %></td>
				<td><%= user.email %></td>
				<td>
					<form
						method="get"
						action="/user/<%=user.id%>/edit">
						<button>Edit Username</button>
					</form>
				</td>
			</tr>
			<% } %>
		</table>
	</body>
</html>
